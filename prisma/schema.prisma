generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blogs {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  author     String
  thumbnail  String
  tags       String[]
  isFeatured Boolean  @default(false)
  views      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}
